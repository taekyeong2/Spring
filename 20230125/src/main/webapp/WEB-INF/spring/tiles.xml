<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
       "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN"
       "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>
	<definition name="myShop" template="/WEB-INF/views/layout/layout.jsp">
		<put-attribute name="title" value="myShop"/>
		<put-attribute name="header" value="/WEB-INF/views/layout/header.jsp"/>
		<put-attribute name="body" value=""/>
		<put-attribute name="footer" value="/WEB-INF/views/layout/footer.jsp"/>
	</definition>
	
	<definition name="*/*" extends="myShop">
		<put-attribute name="body" value="/WEB-INF/views/{1}/{2}.jsp"/>
	</definition>
	
	<definition name="admin/*" extends="myShop">
		<put-attribute name="body" value="/WEB-INF/views/admin/{1}.jsp"/>
	</definition>
	
	<definition name="notiles/*" template="/WEB-INF/views/layout/noLayout.jsp">
		<put-attribute name="title" value="myShop"/>
		<put-attribute name="body" value="/WEB-INF/views/notiles/{1}.jsp"/>
	</definition>

	
</tiles-definitions>